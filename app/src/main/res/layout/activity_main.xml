<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:text="Please choose CHECKBOXES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Nothing Selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/chkCB1"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:checked="true"

     android:text="CB1"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.498"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/textViewResults" />

 <CheckBox
     android:id="@+id/chkCB3"
     android:layout_width="135dp"
     android:layout_height="38dp"
     android:layout_marginTop="52dp"

     android:padding="10dp"
     android:text="CB3"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/chkCB2" />

 <CheckBox
     android:id="@+id/chkCB2"
     android:layout_width="133dp"
     android:layout_height="36dp"
     android:layout_marginTop="52dp"

     android:padding="10dp"
     android:text="CB2"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/chkCB1" />


     android:layout_width="409dp"
     android:layout_height="743dp"
     android:layout_marginTop="8dp"
     app:layout_constraintTop_toBottomOf="@+id/textView"
     tools:layout_editor_absoluteX="3dp"

 <Button
     android:id="@+id/getBtn"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="92dp"
     android:text="Get Checked Value(s)"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/chkCB3"
     android:onClick="onCheckboxClicked"/>

</androidx.constraintlayout.widget.ConstraintLayout>